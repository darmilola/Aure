<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="80dp"
    android:layout_height="110dp"
    android:layout_marginLeft="10dp">

    <com.facebook.drawee.view.SimpleDraweeView
        xmlns:fresco = "http://schemas.android.com/apk/res-auto"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="5dp"
        fresco:actualImageScaleType="centerCrop"
        android:layout_gravity="center"
        fresco:roundingBorderWidth="0.5dp"
        android:src="@drawable/lady2"
        fresco:roundingBorderColor="@color/green"
        fresco:roundAsCircle="true"
        android:id="@+id/direct_message_sender_profile_image"
        fresco:placeholderImage="@drawable/lady1"
        fresco:placeholderImageScaleType="centerCrop"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sintel"
        android:gravity="center"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:textSize="16dp"
        android:fontFamily="@font/airsemi"
        android:textColor="@color/colorPrimary"/>
</LinearLayout>